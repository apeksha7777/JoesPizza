@model DigitalRetailers.Models.Product

@{
    ViewData["Title"] = "Details";
}



<div class="card">
    <div class="card-header">Product Details</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Image" height="200" width="200" />
            </div>
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>@Model.Name</th>
                            <th>₹@Model.Price</th>
                        </tr>
                        <tr>

                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>
                                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </th>
                           
                        </tr>
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>







