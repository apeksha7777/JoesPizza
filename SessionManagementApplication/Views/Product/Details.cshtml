@model DigitalRetailers.Models.Product

@{
    ViewData["Title"] = "Details";
}



<div class="card" >
    <div class="card-header">Product Details</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Image" height="200" width="200" />
            </div>
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>@Model.Name</th>
                            <th>₹@Model.Price</th>
                        </tr>
                        <tr>
                            
                            <td>@Model.Description</td>
                        </tr>
                        
                        <tr>
                            <td colspan="2">
                                <a asp-action="Index" class="btn btn-warning m-1">Continue Shopping</a>
                                <a asp-action="" class="btn btn-outline-success m-1">Add to Cart</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>